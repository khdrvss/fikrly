# Production Environment Variables for fikrly.uz
# Copy this to .env and fill in actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-production-secret-key-minimum-50-characters-change-this
ALLOWED_HOSTS=fikrly.uz,www.fikrly.uz
CSRF_TRUSTED_ORIGINS=https://fikrly.uz,https://www.fikrly.uz

# Database Settings (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=fikrly_db
DB_USER=fikrly_user
DB_PASSWORD=your-strong-database-password-here
DB_HOST=db
DB_PORT=5432

# Redis Settings
REDIS_URL=redis://redis:6379/1

# Email Settings (Configure with your email provider)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@fikrly.uz
ADMIN_EMAIL=admin@fikrly.uz

# Telegram Bot (Optional - for notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# SMS Provider (Eskiz.uz for Uzbekistan)
ESKIZ_EMAIL=your-eskiz-email
ESKIZ_PASSWORD=your-eskiz-password

# OAuth/Social Auth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Security Settings
SILK_ENABLED=False
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=INFO

# Static/Media (for production with separate storage)
# STATIC_URL=https://cdn.fikrly.uz/static/
# MEDIA_URL=https://cdn.fikrly.uz/media/

# Performance
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
