# Copy this file to .env and fill in values. Never commit your real secrets.

# Django
# Generate a secure secret key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=replace-with-a-long-random-string-at-least-50-characters-long
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Telegram bot settings
# The bot token from BotFather
TELEGRAM_BOT_TOKEN=123456:ABCDEF-your-token
# Comma-separated chat IDs for admin alerts (e.g., manager approval requests)
TELEGRAM_ADMIN_CHAT_IDS=11111111,22222222
# Comma-separated chat IDs for new review notifications (group/channel IDs or user IDs)
TELEGRAM_REVIEWS_CHAT_IDS=-1001234567890
# Optional: dedicated chat IDs for ERROR alerts (fallback: ADMIN_CHAT_IDS, then REVIEWS_CHAT_IDS)
TELEGRAM_ERROR_CHAT_IDS=
GA_MEASUREMENT_ID=
