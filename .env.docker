# Docker Environment Configuration for Fikrly
# Copy this to .env before running docker-compose

# ===================================
# DJANGO SETTINGS
# ===================================
DEBUG=False
SECRET_KEY=your-very-long-random-secret-key-here-minimum-50-characters
ALLOWED_HOSTS=fikrly.uz,www.fikrly.uz,localhost,127.0.0.1

# ===================================
# HTTPS (Docker bootstrap)
# ===================================
# Set USE_HTTPS=True after you have SSL working in Nginx (certbot).
# While USE_HTTPS=False, Django will not force HTTPS redirects and will not set secure cookies.
USE_HTTPS=False
SECURE_SSL_REDIRECT=False

# ===================================
# HTTPS (Docker bootstrap)
# ===================================
# Set USE_HTTPS=True after you have SSL working in Nginx (certbot).
# While USE_HTTPS=False, Django will not force HTTPS redirects and will not set secure cookies.
USE_HTTPS=False
SECURE_SSL_REDIRECT=False

# ===================================
# DATABASE (PostgreSQL)
# ===================================
DB_NAME=fikrly_db
DB_USER=fikrly_user
DB_PASSWORD=strong_database_password_here
DB_HOST=db
DB_PORT=5432

# ===================================
# REDIS CACHE
# ===================================
REDIS_URL=redis://redis:6379/1

# ===================================
# EMAIL CONFIGURATION
# ===================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@fikrly.uz
ADMINS=admin@fikrly.uz

# ===================================
# TELEGRAM BOT
# ===================================
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_ADMIN_CHAT_IDS=your_chat_id
TELEGRAM_REVIEWS_CHAT_IDS=your_channel_id

# ===================================
# SMS ESKIZ.UZ
# ===================================
ESKIZ_EMAIL=your-email@example.com
ESKIZ_PASSWORD=your-password

# ===================================
# SITE DOMAIN
# ===================================
SITE_DOMAIN=https://fikrly.uz

# ===================================
# GOOGLE OAUTH
# ===================================
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret

# ===================================
# PERFORMANCE
# ===================================
SILK_ENABLED=False
CSRF_TRUSTED_ORIGINS=https://fikrly.uz,https://www.fikrly.uz,http://localhost,http://127.0.0.1
