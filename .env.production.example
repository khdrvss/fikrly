# ===================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===================================
# Copy this to .env on your VPS server
# NEVER commit the actual .env file to git!

# ===================================
# CRITICAL SECURITY
# ===================================
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=REPLACE-WITH-ACTUAL-SECRET-KEY-MINIMUM-50-CHARS

# ALWAYS False in production!
DEBUG=False

# Your actual domain(s), comma-separated
ALLOWED_HOSTS=fikrly.uz,www.fikrly.uz,YOUR_VPS_IP

# ===================================
# DATABASE (PostgreSQL)
# ===================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=fikrly_production
DB_USER=fikrly_user
DB_PASSWORD=STRONG_DATABASE_PASSWORD_HERE
DB_HOST=localhost
DB_PORT=5432

# ===================================
# REDIS CACHE (Optional but recommended)
# ===================================
REDIS_URL=redis://127.0.0.1:6379/1

# ===================================
# EMAIL CONFIGURATION
# ===================================
# For production emails (error notifications, user emails)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@fikrly.uz
ADMINS=admin@fikrly.uz

# ===================================
# TELEGRAM BOT
# ===================================
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER
TELEGRAM_ADMIN_CHAT_IDS=YOUR_ADMIN_CHAT_ID
TELEGRAM_REVIEWS_CHAT_IDS=YOUR_REVIEWS_CHANNEL_ID

# ===================================
# SMS ESKIZ.UZ
# ===================================
ESKIZ_EMAIL=your-eskiz-email@example.com
ESKIZ_PASSWORD=your-eskiz-password

# ===================================
# SITE DOMAIN
# ===================================
SITE_DOMAIN=https://fikrly.uz

# ===================================
# DJANGO-ALLAUTH
# ===================================
# Get from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-secret

# ===================================
# PERFORMANCE & MONITORING
# ===================================
# Disable Silk in production for security
SILK_ENABLED=False
